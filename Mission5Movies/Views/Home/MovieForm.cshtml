@{
    ViewData["Title"] = "Add Movie";
    ViewData["Header"] = ViewData["Title"];
}

@model Mission5Movies.Models.MovieEntry
    <br />
    <br />
    <div class="" style="width:40%; margin:auto;">
        <form method="post">
            <label asp-for="CategoryId">Category: </label>
            <select class = "form-control" asp-for="CategoryId">
                <option style="color: grey;" value="">-Select One-</option>
                @foreach (MovieCategory mc in ViewBag.Categories)
                {
                    <option value="@mc.CategoryId">@mc.CategoryName</option>
                }
            </select>
            <br />

            <label asp-for="Title">Title: </label>
            <input class = "form-control" asp-for="Title" /><br />

            <label asp-for="Year">Year: </label>
            <input class = "form-control" asp-for="Year" /><br />

            <label asp-for="Director">Director: </label>
            <input class = "form-control" asp-for="Director" /><br />

            <label asp-for="Rating">Rating: </label>
            <select class = "form-control" asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="UR">UR</option>
            </select><br />

            <label asp-for="Edited">Edited: </label>
            <select class = "form-control" asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select><br />

            <label asp-for="LentTo">Lent to:</label>
            <input class = "form-control" asp-for="LentTo" /><br />

            <label asp-for="Notes">Notes: </label>
            <textarea class = "form-control" asp-for="Notes"></textarea><br />

            <input type="submit" value="Submit" class="btn btn-primary"/><br /><br />
            <a class = "btn btn-warning"asp-controller="Home" asp-action="MovieList">Cancel</a>
            <br />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
